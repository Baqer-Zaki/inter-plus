FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// The functionObject entry is a placeholder. It does not affect the patch creation.

// The patches entry specifies the patches to be created.
patches
(

{
        // Name of new patch
        name frontandback;

        // Dictionary to construct new patch from
        patchInfo
        {
            type patch;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (frontandback);

        // If constructFrom = set : name of faceSet
        set frontandback
    }


);



// ************************************************************************* //

